{
  "name": "pixel-gem",
  "version": "1.0.0",
  "description": "A modern Node.js application with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "dev:build": "tsc && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell:check": "cspell \"**/*.{js,ts,md,json}\"",
    "spell:fix": "cspell \"**/*.{js,ts,md,json}\" --show-suggestions"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "pixel-gem"
  ],
  "author": "KodiStudios",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "cspell": "^9.2.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
